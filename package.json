{
	"name": "castform-voice",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"cycle": "git add . ; git commit -m 'cycle' ; git push origin main ; git checkout preview ; git merge main ; git push origin preview ; git checkout main",
		"cycle2": "git checkout prod ; git merge preview ; git push origin prod ; git checkout main",
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"pages:build": "npx @cloudflare/next-on-pages",
		"preview": "npm run pages:build && wrangler pages dev",
		"deploy": "npm run pages:build && wrangler pages deploy",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv ./env.d.ts",
		"tailwindcss-init": "node_modules/.bin/tailwindcss init -p",
		"migrations-local": "npx wrangler d1 migrations apply castform-voice --local",
		"migrations-prod": "npx wrangler d1 migrations apply castform-voice --remote",
		"stripe-hooks": "stripe listen --forward-to localhost:3000/api/webhooks/stripe"
	},
	"dependencies": {
		"@hookform/resolvers": "^5.1.1",
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-select": "^2.2.5",
		"@radix-ui/react-slot": "^1.2.3",
		"@tanstack/react-query": "^5.83.0",
		"@tanstack/react-query-devtools": "^5.83.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"framer-motion": "^12.23.6",
		"libphonenumber-js": "^1.12.10",
		"lucide-react": "^0.525.0",
		"next": "15.3.5",
		"next-auth": "^5.0.0-beta.29",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-hook-form": "^7.60.0",
		"react-phone-input-2": "^2.15.1",
		"react-phone-number-input": "^3.4.12",
		"recharts": "^3.1.0",
		"sonner": "^2.0.6",
		"stripe": "^18.4.0",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^2.1.0",
		"vapi": "^0.1.0",
		"zod": "^4.0.5",
		"zustand": "^5.0.6"
	},
	"devDependencies": {
		"@cloudflare/next-on-pages": "^1.13.12",
		"@cloudflare/workers-types": "^4.20250719.0",
		"@types/node": "^20.19.8",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"autoprefixer": "^10.4.21",
		"postcss": "^8.5.6",
		"tailwindcss": "^3.4.3",
		"typescript": "^5",
		"vercel": "^44.4.1",
		"wrangler": "^4.24.3"
	}
}
